---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import { AstroSeo as SEO } from "@astrolib/seo";
import "../styles/global.css";
import type { ImageMetadata } from "astro";
import FallbackImage from "../assets/blog-placeholder-1.jpg";
import { SITE_TITLE } from "../consts";

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { env } = Astro.locals.runtime;
let gtmId = '';
try {
  if (env?.DB) {
     const res = await env.DB.prepare('SELECT gtm_id FROM gtm_settings WHERE id = 1').first();
     gtmId = res?.gtm_id;
  }
} catch (e) {
  // console.error(e);
}

const { title, description, image = FallbackImage } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link
	rel="preload"
	href="/fonts/atkinson-regular.woff"
	as="font"
	type="font/woff"
	crossorigin
/>
<link
	rel="preload"
	href="/fonts/atkinson-bold.woff"
	as="font"
	type="font/woff"
	crossorigin
/>

<!-- SEO Component -->
<SEO
	title={title}
	description={description}
	openGraph={{
		title: title,
		type: "website",
		images: [
			{
				url: new URL(image.src, Astro.url).toString(),
				alt: title,
			},
		],
	}}
	twitter={{
		card: "summary_large_image",
		site: "@site",
		title: title,
		image: new URL(image.src, Astro.url).toString(),
		description: description,
		imageAlt: title,
	}}
	extend={{
		// keeping existing canonical if SEO component handles it differently,
		// but typically SEO handles canonical.
		// checking astrolib/seo docs: it handles canonical via `canonical` prop.
		link: [{ rel: "canonical", href: canonicalURL.href }],
		meta: [],
	}}
/>

{gtmId && (
<script is:inline define:vars={{ gtmId }}>
  (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer', gtmId);
</script>
)}
