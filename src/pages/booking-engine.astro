        />
        <script is:inline id="tailwind-config">
            tailwind.config = {
                darkMode: "class",
                theme: {
                    extend: {
                        colors: {
                            primary: "#13ec5b",
                            "background-light": "#f6f8f6",
                            "background-dark": "#102216",
                            "emerald-dark": "#0d1b12",
                            "emerald-mid": "#4c9a66",
                        },
                        fontFamily: {
                            display: ["Manrope", "sans-serif"],
                            serif: ["Playfair Display", "serif"],
